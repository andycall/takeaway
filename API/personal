            personal_change_password : ""// 修改密码
            personal_secure : ""        // 安全设置
            personal_details : ""       // 收支明细
        }

        personal : {       // 个人中心
            user_image : "" // 用户头像
            user_name  : "" // 用户姓名
            user_level : "" // 用户安全等级 0 是 low 1 是中等 2 是高 3 是满分
            user_balance : "" // 用户余额
            jump_to_upload : "" // 跳转到上传图片的地址
            charge :   ""   // 跳转到充值的地址
            user_score : "" // 用户积分
            user_collect: {
                restaurant : ""   // 餐厅数量
                cate       : ""   // 美食数量
            }
            user_order    : ""  // 用户订单数量
            recent_order  : [
                {
                    order_number : ""  // 订单号
                    order_time   : ""  // 下单时间
                    order_restaurant : "" // 订单餐厅
                    order_details : "" // 订单详情
                    order_state : ""   // 订单状态
                }
            ]

            recent_deal :  {
                deal_time  : ""     // 交易时间
                deal_type  : ""     // 交易类型
                deal_details : ""   // 交易详情
                deal_money : {
                    money_type : "0"  // 0是增加 1 是减少
                    money_sum  : ""   // 金额数额
                }
                deal_status  : ""     // 交易状态
            }
            more_deal : ""     // 收支明细的地址
        }
    }


